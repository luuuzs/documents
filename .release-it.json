{
  "git": {
    "requireCleanWorkingDir": false,
    "commitMessage": "chore(version): release v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "web": true
  },
  "npm": {
    "publish": false,
    "allowSameVersion": true,
    "ignoreVersion": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "ignoreRecommendedBump": true
    }
  }
}
